{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./build/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./build/js",
    "rootDir": "./src/ts",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5",
  },
  "include": [
    "./src/ts",
  ],
}